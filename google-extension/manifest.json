{
  "manifest_version": 3,
  "name": "Character counter + Color Picker",
  "version": "1.1",
  "description": "Counts the number of characters in the selected text, and an extra color picker",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*", "https://*/*"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
